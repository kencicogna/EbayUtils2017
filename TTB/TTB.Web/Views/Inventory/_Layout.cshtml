<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="/easyui/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="/easyui/themes/icon.css">
    <script type="text/javascript" src="/easyui/jquery.min.js"></script>
    <script type="text/javascript" src="/easyui/jquery.easyui.min.js"></script>
<script type="text/javascript">

    Date.prototype.addDays = function (days) {
        this.setDate(this.getDate() + parseInt(days));
        return this;
    };

    function getDateAdvance() {
        dt = new Date().addDays(0);
        y = dt.getFullYear();
        m = dt.getMonth();
        d = dt.getDay();

        //document.getElementById("calendar").setAttribute("value", m + "/" + d + "/" + y);
    }
</script>
</head>
<body>

    @*Header*@
    <table style="width:100%; background-color:#d3ecf0; height:125px"> 
        <tr>
            @*Display Options*@
            <td style="width:150px">
                <form action="" style="width:150px;vertical-align:top">
                    <input type="radio" name="shiptotype" value="All Locations">All Locations<br />
                    <input type="radio" name="shiptotype" value="All Locations">Domestic<br />
                    <input type="radio" name="shiptotype" value="All Locations">International<br />
                </form>
            </td>

            @*Title*@
            <td style="width:100%;text-align:center;">
                <h1>The Teaching Toy Box</h1>
            </td>

            @*Character*@
            <td style="width:125px">
                <img style="display:inline-block;" src="~/Images/fox.png" />
            </td>

            @*Shipping Calendar*@
            <td style="width:200px;vertical-align:top">
                <input value="getDateAdvance()" id="calendar" class="easyui-datebox" label="Shipping Date:" labelPosition="top" style="padding:5px; width:100%;">
            </td>
        </tr>
    </table>
    <br />

    @*Body*@
    <div class="body-content" style="height:100%">  
        @RenderBody()
    </div>

    
    <div>
        <img src="~/Images/theteachingtoyboxlogo.png" />
    </div>
        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
